from os import path as op, walk

from setuptools import setup


def read(fname):
    try:
        return open(op.join(op.dirname(__file__), fname)).read()
    except IOError:
        return ''

package_data = []
for root, dirs, files in walk(op.join('starter', 'templates', '{{ MODULE }}')):
    for fname in filter(lambda f: not f.endswith('.pyc'), files):
        package_data.append(op.join(fname))

setup(
    name="starter.templates.{{ MODULE }}",
    version="0.1.0",
    license="BSD",
    description=read('DESCRIPTION'),
    long_description=read('README.rst'),
    platforms=('Any'),

    author='{{ AUTHOR_NAME }}',
    author_email='{{ AUTHOR_EMAIL }}',
    url='{{ MODULE_URL }}',
    classifiers=[
        'Intended Audience :: Developers',
        'License :: OSI Approved :: BSD License',
        'Operating System :: OS Independent',
        'Programming Language :: Python',
    ],

    packages=['starter', 'starter.templates', 'starter.templates.{{ MODULE }}'],
    package_data={ "starter.templates.{{ MODULE }}": package_data, "starter.templates": ["{{ MODULE }}.ini"] },
    namespace_packages=["starter", "starter.templates"],
    install_requires = ["starter"],
)

